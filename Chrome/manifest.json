{
  "manifest_version": 3,
  "name": "Global Time",
  "version": "1.0",
  "description": "1,500-beat day clock anchored to UTC+14",
  "permissions": ["alarms"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "128": "icons/badge-128.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icons/logo-128.png"
  }
}